<odoo>
    <data>
        <record id="sis_module.client_kanban" model="ir.ui.view">
            <field name="name">sis_module.clients.kanban</field>
            <field name="model">sis_module.clients</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="outline"/>
                    <field name="industry"/>
                    <field name="logo"/>
                    <field name="phoneNumber"/>
                    <field name="uses"/>
                    <field name="create_uid"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="Avatar" t-att-src="kanban_image('res.users', 'image_128', record.logo.raw_value)" />
                                </div>
                                <div class="o_kanban_details">
                                    <li>
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        <field name="outline"/>
                                    </li>
                                    <li>
                                        <field name="industry"/>
                                    </li>
                                    <li>
                                        <field name="phoneNumber"/>
                                    </li>
                                    <li>
                                        <field name="uses"/>
                                    </li>
                                    <li>
                                        <field name="create_uid"/>
                                    </li>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

