<odoo>
    <data>
        <record id="sis_module.client_search" model="ir.ui.view">
            <field name="name">sis_module.clients.search</field>
            <field name="model">sis_module.clients</field>
            <field name="arch" type="xml">
                <search string="Clients">
                    <field name="name"/>
                    <field name="outline"/>
                    <field name="industry"/>
                    <field name="phoneNumber"/>
                    <field name="uses"/>
                    <field name="create_uid"/>
                </search>
            </field>
        </record>

        <record id="sis_module.solution_search" model="ir.ui.view">
            <field name="name">sis_module.solutions.search</field>
            <field name="model">sis_module.solutions</field>
            <field name="arch" type="xml">
                <search string="Clients">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="usedBy"/>
                    <field name="builtWith"/>
                    <field name="create_uid"/>
                </search>
            </field>
        </record>

        <record id="sis_module.technology_search" model="ir.ui.view">
            <field name="name">sis_module.technologies.search</field>
            <field name="model">sis_module.technologies</field>
            <field name="arch" type="xml">
                <search string="Clients">
                    <field name="name"/>
                    <field name="utility"/>
                    <field name="build"/>
                    <field name="hasRisk"/>
                </search>
            </field>
        </record>

        <record id="sis_module.vulnerability_search" model="ir.ui.view">
            <field name="name">sis_module.vulnerabilities.search</field>
            <field name="model">sis_module.vulnerabilities</field>
            <field name="arch" type="xml">
                <search string="Clients">
                    <field name="cveId"/>
                    <field name="summary"/>
                    <field name="published"/>
                    <field name="lastUpdated"/>
                    <field name="risking"/>
                </search>
            </field>
        </record>
    </data>
</odoo>