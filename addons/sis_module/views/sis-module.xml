<odoo>
    <data>
        <record id="sis_module.client_form" model="ir.ui.view">
            <field name="name">Clients Form</field>
            <field name="model">sis_module.clients</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="outline"/>
                    <field name="industry"/>
                    <field name="logo"/>
                    <field name="phoneNumber"/>
                    <field name="uses"/>
                </tree>
            </field>
        </record>
        <record id="sis_module.client_window" model="ir.actions.act_window">
            <field name="name">Clients</field>
            <field name="res_model">sis_module.clients</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <record id="sis_module.solution_form" model="ir.ui.view">
            <field name="name">Solutions Form</field>
            <field name="model">sis_module.solutions</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="proposal"/>
                    <field name="usedBy"/>
                    <field name="builtWith"/>
                </tree>
            </field>
        </record>
        <record id="sis_module.solution_window" model="ir.actions.act_window">
            <field name="name">Solutions</field>
            <field name="res_model">sis_module.solutions</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="sis_module.technology_form" model="ir.ui.view">
            <field name="name">Technologies Form</field>
            <field name="model">sis_module.technologies</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="utility"/>
                    <field name="logo"/>
                    <field name="resource"/>
                    <field name="build"/>
                    <field name="hasRisk"/>
                </tree>
            </field>
        </record>
        <record id="sis_module.technology_window" model="ir.actions.act_window">
            <field name="name">Technologies</field>
            <field name="res_model">sis_module.technologies</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="sis_module.vulnerability_form" model="ir.ui.view">
            <field name="name">Vulnerabilities Form</field>
            <field name="model">sis_module.vulnerabilities</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="cvss"/>
                    <field name="summary"/>
                    <field name="published"/>
                    <field name="lastUpdated"/>
                    <field name="risking"/>
                </tree>
            </field>
        </record>
        <record id="sis_module.vulnerability_window" model="ir.actions.act_window">
            <field name="name">Vulnerabilities</field>
            <field name="res_model">sis_module.vulnerabilities</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Sistem Informasi Solusi" id="sis_module.menu_root"/>
        <menuitem name="Client" id="sis_module.menu_client" parent="sis_module.menu_root" action="sis_module.client_window"/>
        <menuitem name="Solution" id="sis_module.menu_solution" parent="sis_module.menu_root" action="sis_module.solution_window"/>
        <menuitem name="Technology" id="sis_module.menu_technology" parent="sis_module.menu_root" action="sis_module.technology_window" />
        <menuitem name="Vulnerability" id="sis_module.menu_vulnerability" parent="sis_module.menu_root" action="sis_module.vulnerability_window" />
    </data>
</odoo>